<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.ishansoni.android.neverlosetic_tac_toe.TicTacToeHelp">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/color_first_half"
        android:src="@android:color/holo_green_light"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/button"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/color_second_half"
        android:src="@android:color/holo_green_light"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/button"/>

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:id="@+id/button"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="50sp"
        />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:id="@+id/button2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/white"
        android:layout_above="@+id/button"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="50sp"/>

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:background="@android:color/white"
        android:id="@+id/button3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/button8"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="50sp"/>

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:background="@android:color/white"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="50sp"/>

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:background="@android:color/white"
        android:id="@+id/button5"
        android:layout_alignBottom="@+id/button"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="50sp"/>

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:background="@android:color/white"
        android:id="@+id/button6"
        android:layout_above="@+id/button"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="50sp"/>

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:background="@android:color/white"
        android:id="@+id/button7"
        android:layout_alignBottom="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="50sp"/>

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:background="@android:color/white"
        android:id="@+id/button8"
        android:layout_below="@+id/button"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="50sp"/>

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:background="@android:color/white"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="50sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:id="@+id/hint"
        android:textSize="30sp"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/enemy_pos"
        android:textSize="22sp"
        android:paddingTop="10dp"
        android:layout_below="@id/hint"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/enemy_pos_spec"
        android:textSize="19sp"
        android:layout_below="@id/enemy_pos"
        android:gravity="center"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>